{
    "name": "jest-screenshot-example",
    "scripts": {
        "test": "jest"
    },
    "jest": {
        "collectCoverage": false,
        "moduleFileExtensions": [
            "js"
        ],
        "testMatch": [
            "**/__tests__/*.js"
        ],
        "transform": {
            ".*\\.js$": "babel-jest"
        },
        "modulePaths": [
            "node_modules"
        ],
        "reporters": [
            "default",
            "jest-screenshot/reporter"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest-setup.js"
        ]
    },
    "devDependencies": {
        "babel-jest": "^25.1.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "jest": "^25.1.0",
        "jest-screenshot": "file:..",
        "puppeteer": "^2.1.1"
    }
}
